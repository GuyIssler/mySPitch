<div class="fields">
  <p>
    <%= f.label :content, "Question" %>
    <%= link_to_remove_fields "Remove Question", f %><br />
    <%= f.text_area :content, :label => "Question Content", :rows => 3 %><br />
  </p>
  <%= f.fields_for :responses,f.object.responses.optional_responses do |builder| %>
      <%= render 'response_fields', :f => builder %>
  <% end %>
  <p><%= link_to_add_fields "Add Response", f, :responses %></p>
</div>

