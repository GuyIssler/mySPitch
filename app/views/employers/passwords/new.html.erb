<p class="lead">Forgot your password?</p>

<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: 'form-horizontal' }, help: :block) do |f| %>
  <%= f.alert_message "Please fix the errors below." %>
  
  <%= f.email_field :email, label: 'Email', class: "input-xlarge" %>
  
  
  <%= f.actions do %>
    <%= f.primary 'Send me reset password instructions', disable_with: 'Processing...' %>
  <% end %>
<% end %>

<%= render "devise/shared/links" %>

