<p class="lead">Change your password</p>

<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :put,  class: 'form-horizontal' }, help: :block) do |f| %>
  <%= f.alert_message "Please fix the errors below." %>
  <%= f.hidden_field :reset_password_token %>
  <%= f.password_field :password, label: 'Password', class: "input-xlarge" %>
  <%= f.password_field :password_confirmation, label: 'Confirm new password', class: "input-xlarge" %>
    
  <%= f.actions do %>
    <%= f.primary 'Send me reset password instructions', disable_with: 'Processing...' %>
  <% end %>
<% end %>

<%= render "devise/shared/links" %>

