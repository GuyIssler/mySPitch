<p class="lead">Enter your username and password to log in.</p>

<%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal' }, help: :block) do |f| %>
  <%= f.alert_message "Please fix the errors below." %>
  
  <%= f.email_field :email, label: 'Email', class: "input-xlarge" %>
  <%= f.password_field :password, label: 'Password', class: "input-xlarge" %>
  
  <%= f.actions do %>
    <%= f.primary 'Sign in', disable_with: 'Logging in...' %>
  <% end %>
<% end %>

<%= render "devise/shared/links" %>
